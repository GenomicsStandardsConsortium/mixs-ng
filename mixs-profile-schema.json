{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "description": "MiXS template schema",
    "type": "object",
    "additionalProperties": false,
    "required": [ "name", "description", "contact", "packages", "hierarchy" ],
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "contact": {
            "type": "object",
            "properties": {
		"organization": { "type": "string" },
		"organization_abbrev": { "type": "string" },
		"url": { "type": "string" },
		"email": { "type": "string" },
		"firstname": { "type": "string" },
		"lastname": { "type": "string" }
            },
            "additionalProperties": false,
            "required": [ "organization", "organization_abbrev", "email", "firstname", "lastname" ]
        },
        "packages": {
	    "type": "array",
	    "minItems": 1,
	    "uniqueItems": true,
	    "items": {
		"enum": [ "project", "sample", "library", "air", "built environment", "host-associated", "human-associated", "human-gut", "human-oral", "human-skin", "human-vagina", "microbial mat|biofilm", "miscellaneous", "plant-associated", "sediment", "soil", "wastewater|sludge", "water" ]
	    }
        },
	"fieldDefinitions": {
	    "type": "array",
	    "items": {
		"type": "object",
		"required": [ "field", "validation" ],
		"uniqueItems": true,
		"properties": {
		    "field": {
			"$ref": "#/definitions/fields"
		    },
		    "validation": {
			"type": "string"
		    },
		    "description": {
			"type": "string"
		    }
		}
	    }
	},
        "hierarchy": {
            "type": "array",
            "minItems": 1,
	    "maxItems": 3,
	    "items": {
		"type": "array",
		"minItems": 1,
		"uniqueItems": true,
		"items": {
		    "$ref": "#/definitions/fields"
		}
	    }
	}
    },
